<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatWorld.App">
    <Application.Resources>
        <Color x:Key="PrimaryColor">#4F46E5</Color>
        <Color x:Key="BgColorLight">#FFFFFF</Color>
        <Color x:Key="BgColorDark">#1C1C1E</Color>

        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor">
                <Setter.Value>
                    <AppThemeColor Light="{StaticResource BgColorLight}" Dark="{StaticResource BgColorDark}" />
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
