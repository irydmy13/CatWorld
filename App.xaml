<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="CatWorld.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Application.Resources>
        <Color x:Key="BgColorLight">#FFFFFF</Color>
        <Color x:Key="BgColorDark">#1C1C1E</Color>

        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor">
                <Setter.Value>
                    <AppThemeColor Light="{StaticResource BgColorLight}" Dark="{StaticResource BgColorDark}" />
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
