<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    x:Class="CatWorld.AppShell"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent Title="{x:Static resources:AppResources.Title}" ContentTemplate="{DataTemplate views:GamePage}" />
        <ShellContent Title="{x:Static resources:AppResources.Settings}" ContentTemplate="{DataTemplate views:SettingsPage}" />
        <ShellContent Title="{x:Static resources:AppResources.Stats}" ContentTemplate="{DataTemplate views:StatsPage}" />
    </TabBar>
</Shell>
