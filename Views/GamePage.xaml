<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CatWorld.Views.GamePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:CatWorld.Resources.Localization"
             Title="{x:Static res:AppResources.Title}">

    <Grid RowDefinitions="*,Auto">

        <!-- Фоны -->
        <Grid Grid.Row="0">
            <!-- Комната (день/ночь) -->
            <Image Aspect="AspectFill"
                   InputTransparent="True"
                   Source="{AppThemeBinding Light=bg_day.png, Dark=bg_night.png}">
                <Image.Triggers>
                    <DataTrigger TargetType="Image" Binding="{Binding IsOutside}" Value="True">
                        <Setter Property="IsVisible" Value="False"/>
                    </DataTrigger>
                </Image.Triggers>
            </Image>

            <!-- Улица с фильтром -->
            <Grid IsVisible="False">
                <Grid.Triggers>
                    <DataTrigger TargetType="Grid" Binding="{Binding IsOutside}" Value="True">
                        <Setter Property="IsVisible" Value="True" />
                    </DataTrigger>
                </Grid.Triggers>

                <Image Aspect="AspectFill"
                       InputTransparent="True"
                       Source="bg_street.png" />

                <!-- тёплый оверлей + лёгкая виньетка -->
                <BoxView InputTransparent="True"
                         Opacity="0.18"
                         BackgroundColor="{AppThemeBinding Light=#FFEFD8, Dark=#1A1A1A}" />
                <Rectangle InputTransparent="True" Opacity="0.35">
                    <Rectangle.Fill>
                        <RadialGradientBrush Center="0.5,0.5" Radius="0.9">
                            <GradientStop Offset="0.0" Color="{AppThemeBinding Light=#00FFC98B, Dark=#000000}" />
                            <GradientStop Offset="1.0" Color="{AppThemeBinding Light=#88000000, Dark=#AA000000}" />
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>

            <!-- Игровая зона поверх фонов -->
            <AbsoluteLayout x:Name="PlayArea">

                <!-- Слой мини-игры (падающие предметы) -->
                <AbsoluteLayout x:Name="FallLayer"
                                IsVisible="False"
                                AbsoluteLayout.LayoutBounds="0,0,1,1"
                                AbsoluteLayout.LayoutFlags="All" />

                <!-- Кот -->
                <Image x:Name="Cat"
                       Source="cat.png"
                       WidthRequest="250" HeightRequest="250"
                       TranslationX="{Binding CatX}"
                       TranslationY="{Binding CatY}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OnPlayAreaTapped"/>
                        <!-- На улице — горизонтальный pan -->
                        <PanGestureRecognizer PanUpdated="OnPanOutside"/>
                    </Image.GestureRecognizers>
                </Image>

                <!-- Drop + Tap на всю площадь -->
                <AbsoluteLayout.GestureRecognizers>
                    <DropGestureRecognizer Drop="OnDropToy" />
                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OnPlayAreaTapped"/>
                </AbsoluteLayout.GestureRecognizers>

            </AbsoluteLayout>
        </Grid>

        <!-- Нижняя панель: дверь + лапа + мини-игра + игрушки -->
        <Grid Grid.Row="1"
      ColumnDefinitions="Auto,Auto,Auto,*"
      HeightRequest="110"
      Padding="10,6"
      ColumnSpacing="12">

            <!-- Дверь -->
            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                <ImageButton Source="door.png"
                 WidthRequest="56" HeightRequest="56"
                 BackgroundColor="Transparent"
                 Command="{Binding ToggleLocationCommand}"
                 SemanticProperties.Hint="Toggle location"/>
                <Label Text="{x:Static Member=res:AppResources.Door}"
           FontSize="12"
           HorizontalTextAlignment="Center"
           Opacity="0.8"/>
            </VerticalStackLayout>

            <!-- Лапа -> TicTacToe -->
            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                <ImageButton Source="paw.png"
                 WidthRequest="56" HeightRequest="56"
                 BackgroundColor="Transparent"
                 Clicked="OnOpenTicTacToe"
                 SemanticProperties.Hint="Open Tic-Tac-Toe"/>
                <Label Text="TicTacToe"
           FontSize="12"
           HorizontalTextAlignment="Center"
           Opacity="0.8"/>
            </VerticalStackLayout>

            <!-- Мини-игра (Play/Stop) -->
            <VerticalStackLayout Grid.Column="2" Spacing="2" VerticalOptions="Center">
                <!-- ВАЖНО: x:Name="MiniBtn" -->
                <Button x:Name="MiniBtn"
            Text="Play"
            Command="{Binding ToggleMiniGameCommand}"
            IsEnabled="{Binding IsOutside}" />
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="{Binding MiniScore, StringFormat='Score: {0}'}" FontSize="12" />
                    <Label Text="{Binding MiniTimeLeft, StringFormat='{0}s'}" FontSize="12" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>

    </Grid>
</ContentPage>
