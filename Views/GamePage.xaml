<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CatWorld.Views.GamePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="CatWorld">

    <Grid RowDefinitions="*,Auto">

        <!-- ===== ФОНЫ ===== -->
        <Grid Grid.Row="0">
            <!-- Комната (день/ночь) -->
            <Image Aspect="AspectFill"
                   InputTransparent="True"
                   Source="{AppThemeBinding Light=bg_day.png, Dark=bg_night.png}">
                <Image.Triggers>
                    <DataTrigger TargetType="Image" Binding="{Binding IsOutside}" Value="True">
                        <Setter Property="IsVisible" Value="False"/>
                    </DataTrigger>
                </Image.Triggers>
            </Image>

            <!-- Улица -->
            <Grid IsVisible="False">
                <Grid.Triggers>
                    <DataTrigger TargetType="Grid" Binding="{Binding IsOutside}" Value="True">
                        <Setter Property="IsVisible" Value="True" />
                    </DataTrigger>
                </Grid.Triggers>

                <Image Aspect="AspectFill" InputTransparent="True" Source="bg_street.png"/>
                <!-- Тёплый фильтр + лёгкая виньетка -->
                <BoxView InputTransparent="True" Opacity="0.18"
                         BackgroundColor="{AppThemeBinding Light=#FFEFD8, Dark=#1A1A1A}" />
                <Rectangle InputTransparent="True" Opacity="0.35">
                    <Rectangle.Fill>
                        <RadialGradientBrush Center="0.5,0.5" Radius="0.9">
                            <GradientStop Offset="0.0" Color="{AppThemeBinding Light=#00FFC98B, Dark=#000000}" />
                            <GradientStop Offset="1.0" Color="{AppThemeBinding Light=#88000000, Dark=#AA000000}" />
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>

            <!-- ===== ИГРОВАЯ ЗОНА ===== -->
            <AbsoluteLayout x:Name="PlayArea">

                <!-- Кот -->
                <Image x:Name="Cat"
                       Source="cat.png"
                       WidthRequest="250" HeightRequest="250"
                       TranslationX="{Binding CatX}"
                       TranslationY="{Binding CatY}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPlayAreaTapped"/>
                        <!-- на улице — горизонтальный pan -->
                        <PanGestureRecognizer PanUpdated="OnPanOutside"/>
                    </Image.GestureRecognizers>
                </Image>

                <!-- Drop + Tap по всей области -->
                <AbsoluteLayout.GestureRecognizers>
                    <DropGestureRecognizer Drop="OnDropToy" />
                    <TapGestureRecognizer Tapped="OnPlayAreaTapped"/>
                </AbsoluteLayout.GestureRecognizers>

            </AbsoluteLayout>
        </Grid>

        <!-- ===== НИЖНЯЯ ПАНЕЛЬ: Дверь + Лапа (TicTacToe) + Игрушки ===== -->
        <Grid Grid.Row="1"
              ColumnDefinitions="Auto,Auto,*"
              HeightRequest="110"
              Padding="10,6"
              ColumnSpacing="12">

            <!-- Дверь -->
            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                <ImageButton Source="door.png"
                             WidthRequest="56" HeightRequest="56"
                             BackgroundColor="Transparent"
                             Command="{Binding ToggleLocationCommand}"/>
                <Label Text="Door"
                       FontSize="12"
                       HorizontalTextAlignment="Center"
                       Opacity="0.8"/>
            </VerticalStackLayout>

            <!-- Лапа → крестики-нолики -->
            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                <ImageButton Source="paw.png"
                             WidthRequest="56" HeightRequest="56"
                             BackgroundColor="Transparent"
                             Clicked="OnOpenTicTacToe"/>
                <Label Text="Tic-Tac-Toe"
                       FontSize="12"
                       HorizontalTextAlignment="Center"
                       Opacity="0.8"/>
            </VerticalStackLayout>

            <!-- Игрушки -->
            <CollectionView Grid.Column="2"
                            ItemsSource="{Binding Toys}"
                            ItemsLayout="HorizontalList"
                            Margin="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="6">
                            <Frame Padding="8" HasShadow="True" CornerRadius="12">
                                <VerticalStackLayout>
                                    <Image Source="{Binding Icon}" WidthRequest="64" HeightRequest="64">
                                        <Image.GestureRecognizers>
                                            <DragGestureRecognizer CanDrag="True"
                                                                   DragStarting="OnToyDragStarting"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <Label Text="{Binding Name}" HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

    </Grid>
</ContentPage>
